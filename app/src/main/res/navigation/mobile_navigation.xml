<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

  <fragment
    android:id="@+id/navigation_home"
    android:name="com.skydoves.pokedex.upgrader.ui.home.HomeFragment"
    android:label="@string/app_name"
    tools:layout="@layout/fragment_home">
    <action
      android:id="@+id/action_navigation_home_to_navigation_search"
      app:destination="@id/navigation_search" />
    <action
      android:id="@+id/action_navigation_home_to_navigation_news_detail"
      app:destination="@id/navigation_news_detail" />
  </fragment>

  <fragment
        android:id="@+id/navigation_news_detail"
        android:name="com.skydoves.pokedex.upgrader.ui.newsdetail.NewsDetailFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_news_detail" />


    <fragment
        android:id="@+id/navigation_search"
        android:name="com.skydoves.pokedex.upgrader.ui.search.SearchFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_search" />




</navigation>